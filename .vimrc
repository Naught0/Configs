" Pathogen settings
execute pathogen#infect()

" Pretty shit
colorscheme solarized
syntax on
set background=dark
set ai

" Airline shit
let g:airline_powerline_fonts = 1

" Center Cursor
set scrolloff=100

" Tabs
set expandtab
set smartindent
set tabstop=4
set shiftwidth=4
set softtabstop=4

" Line numbers
set number
set numberwidth=2

" Undo History
set undofile
set hidden
set undodir=/home/james/.vimcache/

" Enable Mouse
set mouse=a

" Keybinds
imap <C-BS> <C-W>
