# Frame gap manipulation
alt + equal
    herbstclient set frame_gap $(($(herbstclient get frame_gap) + 3))

alt + minus
    herbstclient set frame_gap $(($(herbstclient get frame_gap) - 3))

alt + 0
    herbstclient set frame_gap 0

# Media keys
XF86MonBrightnessUp
    light -A 15; echo $(light -G) > /home/james/.config/herbstluftwm/panel/light_mon.log

XF86MonBrightnessDown
    light -U 15; echo $(light -G) > /home/james/.config/herbstluftwm/panel/light_mon.log

alt + XF86MonBrightnessDown
    light -S 1; echo $(light -G) > /home/james/.config/herbstluftwm/panel/light_mon.log
